public class Player {

    //fields
    String[] hand = new String[5];
    int handTotal;
    int turnsToKnock = 1;
    String drawCard;
    String discardCard;
    

    //methods
    // public String knock() {

    //}

    public void draw() {
	drawCard = DrawDeck.deckList[DrawDeck.topCard];
	DrawDeck.topCard++;
        
    }

    public void discard(String card) {
	card = discardCard;
    }

    public void newHand() {
	for (int i = 0; i < hand.length; i++) 
	    if (hand[i] == discardCard) 
		hand[i] = drawCard;
	    
    }

    public void getHand() {
	for (int i = 0; i < hand.length; i++) {
	    hand[i] = DrawDeck.deckList[DrawDeck.topCard + i];
	}
    }
	    
    //  public boolean anyCombos() {
    //}

    public void playCombo() {
    }
    public String toString() {
	String result = "";
	for (int i = 0; i < hand.length; i++)
	    result += i + ": " + hand[i] + System.lineSeparator();
	return result;
    }
    
}
